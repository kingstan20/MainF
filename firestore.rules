rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingDoc() {
      return resource != null;
    }

    function isChatParticipant() {
      return isSignedIn() && request.auth.uid in resource.data.members;
    }
    
    match /users/{userId} {
      allow read;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && isExistingDoc();
    }

    match /posts/{postId} {
      allow read;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && (
        (isOwner(resource.data.authorId) && isExistingDoc()) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions', 'views'])
      );
      allow delete: if isOwner(resource.data.authorId) && isExistingDoc();
    }

    match /chats/{chatId} {
      allow read, update: if isChatParticipant();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
    }

    match /chats/{chatId}/messages/{messageId} {
      allow list, read: if get(/databases/$(database)/documents/chats/$(chatId)).data.members[request.auth.uid] == true;
      allow create: if get(/databases/$(database)/documents/chats/$(chatId)).data.members[request.auth.uid] == true && request.resource.data.senderId == request.auth.uid;
    }
  }
}
