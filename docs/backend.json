{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user profile within the HackMate application, storing personal details, settings, and references to their activities.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address, used for contact.",
          "format": "email"
        },
        "github": {
          "type": "string",
          "description": "The user's GitHub profile URL or username."
        },
        "privacy": {
          "type": "string",
          "description": "Determines the visibility of the user's profile information (e.g., 'public', 'private')."
        },
        "hackathonsAttended": {
          "type": "array",
          "items": { "type": "string" }
        },
        "collaborations": { "type": "number" },
        "wins": { "type": "number" },
        "createdAt": {
          "type": "string",
          "description": "The timestamp when the user account was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "The timestamp when the user profile was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "email",
        "github",
        "privacy",
        "createdAt"
      ]
    },
    "Post": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Post",
      "type": "object",
      "description": "Represents a user-generated content post, categorized into different types such as hackathon announcements, team-building requests, project collaborations, or achievement showcases.",
      "properties": {
        "authorId": {
          "type": "string",
          "description": "Reference to the User who created the post."
        },
        "authorName": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["HACKATHON", "TEAMMATE", "COLLABORATION", "FAME"]
        },
        "description": { "type": "string" },
        "venue": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "idea": { "type": "string" },
        "skills": { "type": "array", "items": { "type": "string" } },
        "currentTeam": { "type": "number" },
        "requiredTeam": { "type": "number" },
        "teamCount": { "type": "number" },
        "achievement": { "type": "string" },
        "teamMembers": { "type": "array", "items": { "type": "string" } },
        "views": { "type": "number" },
        "reactions": {
          "type": "object",
          "properties": {
            "chat": { "type": "number" },
            "congrats": { "type": "number" },
            "bestOfLuck": { "type": "number" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": [
        "authorId",
        "authorName",
        "type",
        "description",
        "createdAt"
      ]
    },
    "Chat": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Chat",
      "type": "object",
      "description": "Represents a private conversation or group chat between users.",
      "properties": {
        "participantIds": {
          "type": "array",
          "description": "References to Users involved in this chat.",
          "items": { "type": "string" }
        },
        "members": {
          "type": "object",
          "description": "Map of participant UIDs for security rules.",
          "additionalProperties": { "type": "boolean" }
        },
        "lastMessage": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["participantIds", "members", "createdAt"]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a single message sent within a chat conversation.",
      "properties": {
        "senderId": { "type": "string" },
        "senderName": { "type": "string" },
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["senderId", "senderName", "content", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores individual user profiles."
    },
    "/posts/{postId}": {
      "schema": { "$ref": "#/entities/Post" },
      "description": "A top-level collection for all public user-generated content posts."
    },
    "/chats/{chatId}": {
      "schema": { "$ref": "#/entities/Chat" },
      "description": "Represents private conversations."
    },
    "/chats/{chatId}/messages/{messageId}": {
      "schema": { "$ref": "#/entities/Message" },
      "description": "Individual messages within a chat."
    }
  }
}
